{
    "name": "punkstar/mageconfigsync",
    "description": "A utility to aid the storing of Magento configuration in version control.",
    "license": "MIT",
    "keywords": ["magento"],

    "authors": [{
        "name": "Nick Jones",
        "email": "nick@nicksays.co.uk",
        "homepage": "http://www.nicksays.co.uk",
        "role": "Developer"
    }],

    "require": {
        "php": ">=5.3.0",
        "symfony/console": "*",
        "symfony/yaml": "*"
    },

    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "firegento/mage-ci": "dev-master",
        "clue/phar-composer": "dev-master"
    },

    "autoload": {
        "psr-0": {
            "MageConfigSync\\": "src/"
        }
    },

    "bin": ["bin/mageconfigsync"],

    "repositories": [{
        "type": "composer",
        "url": "https://packages.firegento.com"
    }]
}
